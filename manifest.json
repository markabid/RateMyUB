{
	"manifest_version": 2,
 	"name": "RateMyUB",
 	"version": "1.0",
 	"description": "View ratings right in the HUB!",
  "icons": { "16": "icon.png", "48": "icon.png", "128": "icon.png" },

	"browser_action": {
	  "default_icon": "icon.png"
 },

	"permissions": [
		//"http://www.nameofwebsite.com/*",
		"activeTab"
	],

 	"background": {
    	"scripts": ["background.js"],
    	"persistent": true
  	}
}
